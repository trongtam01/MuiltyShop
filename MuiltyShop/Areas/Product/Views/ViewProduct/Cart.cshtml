@model List<MuiltyShop.Areas.Product.Models.CartItem>
@{
    Layout = "_Layout";
}

@if (Model.Count > 0)
{
    decimal total = 0;
        
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var cartitem in Model)
                        {
                            var thanhtien = cartitem.quantity * cartitem.product.Price;
                            total += thanhtien;
                            var srcImg = "/contents/nophoto.png";
                            if (cartitem.product.Photos.Any())
                            {
                                srcImg = $"/contents/Products/{cartitem.product.Photos.FirstOrDefault().FileName}";
                            }

                            <tr>
                          
                                <td class="align-middle"><img src="@srcImg" alt="" style="width: 50px;">@cartitem.product.Title</td>
                                <td class="align-middle">@(
                            cartitem.product.Price.ToString("n0")
                            )</td>
                                <td class="align-middle">             
                                    <input asp-for="@cartitem.quantity" id="@($"quantity-{cartitem.product.ProductId}")" />
                                </td>
                                <td class="align-middle">@(thanhtien.ToString("n0"))</td>
                                    <td class="align-middle d-flex justify-content-center align-items-center">
                                    <button class="btn btn-success updatecartitem"
                                    data-productid="@cartitem.product.ProductId">
                                        Update
                                    </button>
                                    <a asp-route="removecart" asp-route-productid="@cartitem.product.ProductId"
                                class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>@(total.ToString("n0"))</h5>
                        </div>
                        <a asp-controller="ViewProduct" asp-action="Checkout" asp-area="Product" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="alert alert-danger">Giỏ hàng trống</p>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".updatecartitem").click(function (event) {
                event.preventDefault();
                var productid = $(this).attr("data-productid");
                var quantity = $("#quantity-" + productid).val();
                $.ajax({
                    type: "POST",
                    url: "@Url.RouteUrl("updatecart")",
                    data: {
                        productid: productid,
                        quantity: quantity
                    },
                    success: function (result) {
                        window.location.href = "@Url.RouteUrl("cart")";
                    }
                });
            });
        });
    </script>
}