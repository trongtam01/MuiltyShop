@using Microsoft.AspNetCore.Identity
@model List<MuiltyShop.Areas.Product.Models.CartItem>

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
    Layout = "_Layout";
    IQueryable<MuiltyShop.Models.Checkout.PaymentModel> payments = ViewBag.payment as IQueryable<MuiltyShop.Models.Checkout.PaymentModel>;
}

@if (SignInManager.IsSignedIn(User))
{
    decimal total = 0;
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <h2>
                                <i class="fas fa-user"></i> @UserManager.GetUserName(User)
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-3">Products</h6>
                            <h6 class="mb-3 ml-5">Price</h6>
                            <h6 class="mb-3">Quantity</h6>
                        </div>
                        @foreach (var cart in Model)
                        {
                            var thanhtien = cart.quantity * cart.product.Price;
                            var shipping = 10;
                            var subtotal = 150;
                            total = thanhtien + shipping + subtotal;
                            <div class="d-flex justify-content-between">
                                <p>@cart.product.Title</p>
                                <p>@cart.product.Price.ToString("n0")</p>
                                <p>@cart.quantity</p>
                            </div>
                        }
                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>$150</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>@total</h5>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                    <div class="bg-light p-30">
                        @foreach (var payment in payments)
                        {
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" name="@payment.Title.ToLower()" id="@payment.Title">
                                    <label class="custom-control-label" for="@payment.Title">@payment.Title</label>
                                </div>
                            </div>
                        }
                        <a asp-area="Product" asp-controller="ViewProduct" asp-action="SendCheckout" class="btn btn-block btn-primary font-weight-bold py-3">Place Order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
