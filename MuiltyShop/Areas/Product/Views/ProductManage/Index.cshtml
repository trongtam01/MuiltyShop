@using MuiltyShop.Services.Menu
@inject AdminSidebarService _AdminSidebarService
@model IEnumerable<MuiltyShop.Models.Product.ProductModel>

@{
    ViewData["Title"] = "Danh sách Product";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}


<partial name="_AlertMessage" />

<p>
    <a asp-action="Create">Tạo sản phẩm mới</a>
</p>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowAmount" />
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="largeAmount" />
        </div>
        <div class="col-3">
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>
<p>Tổng số bài viết: @ViewBag.totalPosts</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            @*<th>STT</th>*@
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @(++ViewBag.postIndex)
                </td>*@
                <td>
                    @if (item.Image != null)
                    {
                        <img src="/contents/Products/@item.Image" width="40" alt="Alternate Text" />
                    }
                    else
                    {
                        <img src="/contents/nophoto.png" width="20" alt="Alternate Text" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId">
                        @Html.DisplayFor(modelItem => item.Title)
                    </a>
                    <br>
                    <small>
                        @string.Join(", ", item.ProductCategoryProducts.Select(pc => pc.Category.Title))
                    </small>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateUpdated)
                </td>
                <td>

                    <a asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@*<partial name="_PagingXTL" model="@ViewBag.pagingModel" />*@

@{
    _AdminSidebarService.SetActive("ProductManage", "Index", "Product");
}

@section Sidebar
    {
    @Html.Raw(_AdminSidebarService.renderHtml())
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>